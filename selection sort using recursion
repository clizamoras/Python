
class Solution:
  def selection(self,arr,n):
    if n==1:
      return 
    for i in range(n):
      index=i
      for j in range(i+1,n):
        if arr[j]<arr[index]:
         index=j
        arr[index],arr[j]=arr[j],arr[index]
        self.selection(arr,n-1)
    return arr
arr=[5,3,8,1,2]
obj=Solution()
print(obj.selection(arr,5))
